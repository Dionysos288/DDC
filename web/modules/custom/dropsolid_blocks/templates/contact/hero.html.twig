{#
/**
 * @file
 * Theme implementation for the Contact Hero block.
 *
 * Available variables:
 * - content: An array of content elements including:
 *   - description: The main content description (HTML)
 */
#}
<section class="contact-hero">

  <div class="contact-hero__content">
  <div class="contact-hero__stars">
        <img src="{{ base_path ~ directory }}/images/icons/contact/stars.svg" alt="Arrow bottom" />
      </div>
      <div class="contact-hero__stars2">
        <img src="{{ base_path ~ directory }}/images/icons/contact/stars2.svg" alt="Arrow bottom" />
      </div>
   
     <h1 class="contact-hero__title h1">
       Drop Me Your
       <span class="contact-hero-highlight">
         <span class="contact-hero-text h1">Message</span>
         <span class="contact-hero-bg"></span>
       </span>
     </h1>
   
    <div class="contact-hero__text body-xl">
      {{ content.description|raw }}
    </div>

   <a class="contact-final__button" href="#contact-form">
      <div class="contact-final__image">
        <img src="{{ base_path ~ directory }}/images/icons/arrowwhite.svg" alt="Arrow bottom" />
      </div>
      <p class="body-m">Letâ€™s Talk</p>
    </a>
  </div>
</section> 